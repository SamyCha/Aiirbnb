<div class="row">
	<div class="col-md-8">
		<div class="text-center">
			<h1>Réservez des logements uniques et vivez votre destination comme un habitant.</h1>
		</div>
	</div>
</div>

<br>

<%= form_tag search_path, method: :get do %>
	<div class="row">
		<div class="col-md-6">
			<%= text_field_tag :search, params[:search], placeholder: "Où? Destination, ville, adresse", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= text_field_tag :start_date, params[:start_date], placeholder: "Arrivée", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= text_field_tag :end_date, params[:end_date], placeholder: "Départ", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= submit_tag "Rechercher", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>

<br>
<hr>
<br>

<div class="row">
	<div class="col-md-4">
			<h3>Logements :</h3>
	</div>
</div>
<div class="row">
	<% @rooms.each do |room| %>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading preview">
					<%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %> 
				</div>
				<div class="panel-body">
				    <%= image_tag avatar_url(room.user), class: "img-circle avatar-small" %>
					<%= link_to room.listing_name, room %>
				</div>
			</div>
		</div>
	<% end %>

</div>

<script>
	$(function() {
		$("#start_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#end_date').datepicker("option", "minDate", selected);
				$('#end_date').attr('disabled', false);
			}
		});

		$("#end_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#start_date').datepicker("option", "maxDate", selected);
			}
		});
	})


</script>